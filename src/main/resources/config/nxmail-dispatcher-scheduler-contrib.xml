<?xml version="1.0"?>
<component name="org.nuxeo.ecm.platform.mail.dispatcher.scheduler.config">
 
  <extension
    target="org.nuxeo.ecm.platform.scheduler.core.service.SchedulerRegistryService"
    point="schedule">

    <schedule id="mailDispatcherSchedule">
      <username>Administrator</username>
      <password>Administrator</password>
      <eventId>MailDispatcherEvent</eventId>
      <eventCategory>default</eventCategory>
      <!-- every half hour of every day -->
      <cronExpression>0 0/30 * * * ?</cronExpression>
    </schedule>

  </extension>

</component>
